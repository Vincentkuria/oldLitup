<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/ThemeOverlay.MaterialComponents.Light"
    android:foregroundTint="#191717"
    android:padding="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notmember_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_lituplogo1" />

    <TextView
        android:id="@+id/notmember_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/notmember_img"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/notmember_bio"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textColor="#BABBBC"
        android:layout_below="@+id/notmember_name"
        android:layout_alignStart="@id/notmember_name"
        android:layout_toEndOf="@id/notmember_img"
        />

    <Button
        android:id="@+id/invite"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/inputs"
        android:elevation="6dp"
        android:text="INVITE"
        android:textSize="10sp"
        android:layout_margin="10dp"
        android:textColor="#07192C"
         />
</RelativeLayout>